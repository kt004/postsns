<!DOCTYPE html>
<html>
  <head>
    <title>PostSNS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header>
		<div class="header-logo">
			<% if @current_user %>
				<%= link_to("PostSNS", "/posts/index") %>
			<% else %>
				<%= link_to("PostSNS", "/") %>
			<% end %>
		</div>
		<ul class="header-menus">
			<% if @current_user %>
				<li><%= link_to(@current_user.name, "/users/#{@current_user.id}") %></li>
				<li><%= link_to("posts_list", "/posts/index") %></li>
				<li><%= link_to("new_post", "/posts/new") %></li>
				<li><%= link_to("users_list", "/users/index") %></li>
				<li><%= link_to("logout", "/logout", {method: :post}) %></li>
			<% else %>
				<li><%= link_to("What's_PostSNS", "/about") %></li>
				<li><%= link_to("signup", "/signup") %></li>
				<li><%= link_to("login", "/login") %></li>
			<% end %>
		</ul>
	</header>
	<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<% end %>
    <%= yield %>
  </body>
</html>
